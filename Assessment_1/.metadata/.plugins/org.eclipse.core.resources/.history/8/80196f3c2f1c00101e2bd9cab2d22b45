package com.assessment1.serviceB.serviceImp;

import org.modelmapper.ModelMapper;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.kafka.core.KafkaTemplate;
import org.springframework.stereotype.Service;

import com.assessment1.serviceB.dto.Dto;
import com.assessment1.serviceB.entity.Entity;
import com.assessment1.serviceB.repository.RepositoryB;
import com.assessment1.serviceB.service.ServiceB;

import lombok.extern.slf4j.Slf4j;

@Service
@Slf4j
public class ServiceBImp implements ServiceB {

    @Autowired
    private RepositoryB repo;

    @Autowired
    private ModelMapper modelMapper;

    @Autowired
    private KafkaTemplate<String, String> kafkaTemp;

    @Override
    public Dto saveEntity(Dto obj) {
        log.info("ğŸ“¥ [saveEntity] - Received request to save DTO: {}", pretty(obj));

        // DTO âœ Entity
        Entity entity = convertDtoToEntity(obj);
        log.debug("ğŸ”„ [saveEntity] - Converted DTO to Entity: {}", pretty(entity));

        // Save Entity
        entity = repo.save(entity);
        log.info("âœ… [saveEntity] - Entity saved to database: {}", pretty(entity));

        // Entity âœ DTO
        obj = convertEntityToDto(entity);
        log.debug("ğŸ”„ [saveEntity] - Converted Entity back to DTO: {}", pretty(obj));

        // Send to Kafka
        sendObject(obj);

        log.info("ğŸ“¤ [saveEntity] - Final DTO sent and returned: {}", pretty(obj));
        return obj;
    }

    public void sendObject(Dto obj) {
        try {
            log.info("ğŸ“¡ [sendObject] - Sending DTO to Kafka topic [ServerB-topic]");
            kafkaTemp.send("ServerB-topic", obj.toString());
            log.debug("ğŸ›°ï¸ [sendObject] - Kafka payload: {}", obj);
        } catch (Exception e) {
            log.error("âŒ [sendObject] - Failed to send DTO to Kafka. Error: {}", e.getMessage(), e);
        }
    }

    private Entity convertDtoToEntity(Dto dto) {
        log.debug("ğŸ§¬ [convertDtoToEntity] - Mapping DTO âœ Entity: {}", pretty(dto));
        return modelMapper.map(dto, Entity.class);
    }

    private Dto convertEntityToDto(Entity entity) {
        log.debug("ğŸ§¬ [convertEntityToDto] - Mapping Entity âœ DTO: {}", pretty(entity));
        return modelMapper.map(entity, Dto.class);
    }
 
    private String pretty(Object obj) {
        return obj != null ? obj.toString().replaceAll(", ", ",\n\t") : "null";
    }
}
